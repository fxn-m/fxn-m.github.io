{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "types": ["vite/client"],
    "allowImportingTsExtensions": false,
    "noEmit": true
  },
  "include": [
    "env.d.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/server/**",
    "scripts/**",
    "dist",
    "node_modules"
  ]
}
